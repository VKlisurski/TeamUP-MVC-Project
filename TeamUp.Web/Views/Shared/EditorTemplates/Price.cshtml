@model Decimal?

<div class="row">
    <div class="col-md-3">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-3">
        @Html.Kendo().NumericTextBoxFor(m => m).Min(30).Max(100).Value(30)
    </div>
    <div class="col-md-3">
        @Html.ValidationMessageFor(m => m)
    </div>
</div>