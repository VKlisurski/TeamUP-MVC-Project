@model int?



<div class="row">
    <div class="col-md-3">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-3">
        @(Html.Kendo().IntegerTextBoxFor(m => m)
          .HtmlAttributes(new { style = "width:100%" })
          .Min(1)
          .Max(999))
    </div>
    <div class="col-md-3">
        @Html.ValidationMessageFor(m => m)
    </div>
</div>