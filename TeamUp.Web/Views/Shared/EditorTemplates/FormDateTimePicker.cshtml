@model DateTime?

<div class="row">
    <div class="col-md-3">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-3">
        @(Html.Kendo().DateTimePickerFor(m => m).Min(DateTime.Now.AddHours(1)).Max(DateTime.Now.AddMonths(1)).Value(DateTime.Now.AddHours(1)))
    </div>
    <div class="col-md-3">
        @Html.ValidationMessageFor(m => m)
    </div>
</div>